{
  "name": "libyosys",
  "version": "0.0.1",
  "description": "Multiplatform node bindings for libyosys.",
  "main": "index.js",
  "repository": "https://github.com/electron-lang/libyosys",
  "author": "David Craven <david@craven.ch>",
  "license": "ISC",
  "dependencies": {
    "node-addon-api": "^1.4.0",
    "node-gyp-build": "^3.4.0"
  },
  "devDependencies": {
    "prebuildify": "^2.7.0",
    "standard": "^11.0.1",
    "tape": "^4.9.1"
  },
  "scripts": {
    "install": "yarn clean && yarn build-yosys && yarn build-napi",
    "clean": "rm -rf build",
    "build-yosys": "make build-yosys",
    "build-napi": "node-gyp-build",
    "test": "standard && tape tests/test.js",
    "prebuild": "prebuildify --napi"
  },
  "standard": {
    "ignore": [
      "yosys-src/"
    ]
  }
}
