{
  "name": "libyosys",
  "version": "0.0.1-1",
  "description": "Multiplatform node bindings for libyosys.",
  "main": "index.js",
  "repository": "https://github.com/electron-lang/libyosys",
  "author": "David Craven <david@craven.ch>",
  "license": "ISC",
  "dependencies": {
    "node-addon-api": "^1.4.0",
    "node-gyp-build": "^3.4.0"
  },
  "devDependencies": {
    "prebuildify": "^2.7.0",
    "prebuildify-ci": "^1.0.2",
    "standard": "^11.0.1",
    "tape": "^4.9.1"
  },
  "scripts": {
    "prepare": "node-gyp-build || true",
    "build": "rm -rf build && make build-yosys && node-gyp-build",
    "test": "standard && tape tests/test.js",
    "prebuild": "rm -rf build && make build-yosys && prebuildify --napi",
    "prepublishOnly": "prebuildify-ci download"
  },
  "standard": {
    "ignore": [
      "yosys-src/"
    ]
  },
  "files": [
    "index.js",
    "index.d.js",
    "prebuilds"
  ]
}
